<Window x:Class="PasswordCrackingGUI.GpuSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GPU Settings Configuration" 
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#FF2D2D30"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Reuse the same styles from MainWindow -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1E8AD6"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="InfoText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFAAAAAA"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="GPU Settings Configuration" 
                   Style="{StaticResource SectionHeader}"
                   FontSize="20" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Instructions -->
        <Border Grid.Row="1" Background="#FF3F3F46" CornerRadius="6" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Configure individual settings for each selected GPU:" 
                           Foreground="White" FontWeight="SemiBold" Margin="0,0,0,8"/>
                <TextBlock Text="• Batch Size: Number of password combinations processed per GPU kernel call" 
                           Style="{StaticResource InfoText}" Margin="0,0,0,4"/>
                <TextBlock Text="• Memory Limit: Maximum percentage of GPU memory to use (prevents system instability)" 
                           Style="{StaticResource InfoText}" Margin="0,0,0,4"/>
                <TextBlock Text="• Higher batch sizes = better performance but more memory usage" 
                           Style="{StaticResource InfoText}"/>
            </StackPanel>
        </Border>
        
        <!-- GPU Settings List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel Name="GpuSettingsPanel">
                <!-- GPU setting items will be added programmatically -->
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="1" Content="Reset to Defaults" 
                    Style="{StaticResource ModernButton}" 
                    Name="ResetButton"
                    Background="#FF666666"
                    Margin="0,0,12,0" Width="140"/>
            <Button Grid.Column="2" Content="Cancel" 
                    Style="{StaticResource ModernButton}" 
                    Name="CancelButton"
                    Background="#FF666666"
                    Margin="0,0,12,0" Width="100"/>
            <Button Grid.Column="3" Content="Apply Settings" 
                    Style="{StaticResource ModernButton}" 
                    Name="ApplyButton"
                    Width="120"/>
        </Grid>
    </Grid>
</Window> 