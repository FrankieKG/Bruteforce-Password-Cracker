<Window x:Class="PasswordCrackingGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordCrackingGUI"
        mc:Ignorable="d"
        Title="Password Cracker Pro - Multi-GPU Edition" 
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30">
    
    <Window.Resources>
        <!-- Modern Dark Theme Styles -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1E8BC3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="InfoText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFAAAAAA"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
        
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                        Background="#FF3F3F46"
                                        BorderBrush="#FF5A5A5A"
                                        BorderThickness="1"
                                        Focusable="False"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}" 
                                              BorderBrush="{TemplateBinding BorderBrush}" 
                                              BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Grid.Column="1" 
                                                    HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center" 
                                                    Data="M 0 0 L 4 4 L 8 0 Z" 
                                                    Fill="White"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite" 
                                            IsHitTestVisible="False" 
                                            Content="{TemplateBinding SelectionBoxItem}" 
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                            Margin="8,6,28,6" 
                                            VerticalAlignment="Center" 
                                            HorizontalAlignment="Left"
                                            TextElement.Foreground="White"/>
                            <TextBox x:Name="PART_EditableTextBox" 
                                   Style="{x:Null}" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Center" 
                                   Margin="8,6,28,6" 
                                   Focusable="True" 
                                   Background="Transparent" 
                                   Foreground="White"
                                   Visibility="Hidden" 
                                   IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup Name="Popup" 
                                 Placement="Bottom" 
                                 IsOpen="{TemplateBinding IsDropDownOpen}" 
                                 AllowsTransparency="True" 
                                 Focusable="False" 
                                 PopupAnimation="Slide">
                                <Grid Name="DropDown" 
                                    SnapsToDevicePixels="True" 
                                    MinWidth="{TemplateBinding ActualWidth}" 
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" 
                                          Background="#FF3F3F46" 
                                          BorderThickness="1" 
                                          BorderBrush="#FF5A5A5A"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ModernComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Password Cracker Pro" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#FF007ACC" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- Target Configuration Section -->
        <Border Grid.Row="1" Background="#FF3F3F46" CornerRadius="6" Padding="16" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Target Configuration" Style="{StaticResource SectionHeader}"/>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Target Hash -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Target Hash:" 
                               VerticalAlignment="Center" Foreground="#FFCCCCCC" Margin="0,0,8,8"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="TargetHashTextBox" 
                             Style="{StaticResource ModernTextBox}" Margin="0,0,0,8"
                             Text="9c56cc51b374c3ba189210d5b6d4bf57790d351c96c47c02190ecf1e430635ab"/>
                    
                    <!-- Charset -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Charset:" 
                               VerticalAlignment="Center" Foreground="#FFCCCCCC" Margin="0,0,8,8"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="CharsetTextBox" 
                             Style="{StaticResource ModernTextBox}" Margin="0,0,8,8"
                             Text="abcdefghijklmnopqrstuvwxyz"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" Name="CharsetPresets" 
                              Style="{StaticResource ModernComboBox}" Width="120" Margin="0,0,0,8">
                        <ComboBoxItem Content="Lowercase" Style="{StaticResource ModernComboBoxItem}"/>
                        <ComboBoxItem Content="Alphanumeric" Style="{StaticResource ModernComboBoxItem}"/>
                        <ComboBoxItem Content="All ASCII" Style="{StaticResource ModernComboBoxItem}"/>
                        <ComboBoxItem Content="Custom" Style="{StaticResource ModernComboBoxItem}"/>
                    </ComboBox>
                    
                    <!-- Max Length & Algorithm -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Max Length:" 
                               VerticalAlignment="Center" Foreground="#FFCCCCCC" Margin="0,0,8,8"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,8">
                        <Slider Name="MaxLengthSlider" Width="200" Minimum="1" Maximum="12" Value="8" 
                                VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock Name="MaxLengthDisplay" Text="8" Foreground="#FFCCCCCC" 
                                   VerticalAlignment="Center" Width="20"/>
                        <TextBlock Text="Algorithm:" Foreground="#FFCCCCCC" 
                                   VerticalAlignment="Center" Margin="40,0,8,0"/>
                        <ComboBox Name="AlgorithmComboBox" 
                                  Style="{StaticResource ModernComboBox}" Width="120">
                            <ComboBoxItem Content="Auto-Select" IsSelected="True" Style="{StaticResource ModernComboBoxItem}"/>
                            <ComboBoxItem Content="Simple Multi-GPU" Style="{StaticResource ModernComboBoxItem}"/>
                            <ComboBoxItem Content="Dynamic Load Balance" Style="{StaticResource ModernComboBoxItem}"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- GPU Selection and Performance Metrics Section -->
        <Border Grid.Row="2" Background="#FF3F3F46" CornerRadius="6" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                
                <!-- GPU Selection Column -->
                <Grid Grid.Column="0" Margin="0,0,8,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- GPU Selection Header -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Available GPUs" Style="{StaticResource SectionHeader}"/>
                        <Button Grid.Column="1" Content="🔄 Refresh" Style="{StaticResource ModernButton}" 
                                Name="RefreshGpusButton" Margin="0,0,0,8"/>
                    </Grid>
                    
                    <!-- GPU List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,16">
                        <StackPanel Name="GpuListPanel">
                            <!-- GPU items will be added programmatically -->
                            <Border Background="#FF4A4A4A" CornerRadius="4" Padding="12" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <CheckBox Grid.Column="0" IsChecked="True" VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="NVIDIA GeForce RTX 3070 Laptop GPU" 
                                                   Foreground="White" FontWeight="SemiBold"/>
                                        <TextBlock Text="Memory: 7 GB • Compute Units: 40" 
                                                   Style="{StaticResource InfoText}"/>
                                        <ProgressBar Height="6" Margin="0,4,0,0" 
                                                     Background="#FF2D2D30" Foreground="#FF00D4AA" 
                                                     Value="0"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="2" Content="⚙️" Style="{StaticResource ModernButton}" 
                                            Width="30" Height="30" Name="GpuSettingsButton" ToolTip="Configure GPU Settings"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- Overall Progress -->
                    <StackPanel Grid.Row="2">
                        <TextBlock Text="Overall Progress" Style="{StaticResource SectionHeader}"/>
                        <ProgressBar Name="OverallProgressBar" Height="20" 
                                     Background="#FF2D2D30" Foreground="#FF007ACC" 
                                     Value="0" Margin="0,0,0,8"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Name="ProgressText" Text="Ready to start..." 
                                       Foreground="#FFCCCCCC"/>
                            <TextBlock Grid.Column="1" Name="ElapsedText" Text="" 
                                       Foreground="#FFCCCCCC" Margin="16,0,0,0"/>
                        </Grid>
                    </StackPanel>
                </Grid>
                
                <!-- Performance Metrics Column -->
                <Border Grid.Column="1" Background="#FF2D2D30" CornerRadius="6" Padding="16" Margin="8,0,0,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Performance Metrics Header -->
                            <TextBlock Grid.Row="0" Text="📈 Performance Metrics" Style="{StaticResource SectionHeader}"/>
                            
                            <!-- Real-time Speed Display -->
                            <Grid Grid.Row="1" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Column="0" Background="#FF1E1E1E" CornerRadius="4" Padding="12" Margin="0,0,4,0">
                                    <StackPanel>
                                        <TextBlock Text="Total Speed" Foreground="#FFAAAAAA" FontSize="10" FontWeight="SemiBold"/>
                                        <TextBlock Name="TotalSpeedText" Text="0.0 M/s" Foreground="#FF00D4AA" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                                
                                <Border Grid.Column="1" Background="#FF1E1E1E" CornerRadius="4" Padding="12" Margin="4,0,0,0">
                                    <StackPanel>
                                        <TextBlock Text="Combinations" Foreground="#FFAAAAAA" FontSize="10" FontWeight="SemiBold"/>
                                        <TextBlock Name="CombinationsText" Text="0 / 0" Foreground="#FF007ACC" FontSize="18" FontWeight="Bold"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Per-GPU Performance -->
                            <StackPanel Grid.Row="2" Margin="0,0,0,16">
                                <TextBlock Text="Per-GPU Performance" Foreground="#FFCCCCCC" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <ScrollViewer Name="GpuPerformanceScrollViewer" MaxHeight="150" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <StackPanel Name="GpuPerformancePanel">
                                        <!-- Per-GPU performance items will be added programmatically -->
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                            
                            <!-- Detailed Statistics -->
                            <Border Grid.Row="3" Background="#FF1E1E1E" CornerRadius="4" Padding="12">
                                <StackPanel>
                                    <TextBlock Text="Detailed Statistics" Foreground="#FFCCCCCC" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Search Space:" Foreground="#FFAAAAAA" FontSize="10"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Name="SearchSpaceText" Text="0" Foreground="#FFCCCCCC" FontSize="10"/>
                                        
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Progress:" Foreground="#FFAAAAAA" FontSize="10"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Name="ProgressPercentText" Text="0.0%" Foreground="#FFCCCCCC" FontSize="10"/>
                                        
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Active GPUs:" Foreground="#FFAAAAAA" FontSize="10"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Name="ActiveGpusText" Text="0" Foreground="#FFCCCCCC" FontSize="10"/>
                                        
                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Algorithm:" Foreground="#FFAAAAAA" FontSize="10"/>
                                        <TextBlock Grid.Row="3" Grid.Column="1" Name="AlgorithmText" Text="None" Foreground="#FFCCCCCC" FontSize="10"/>
                                        
                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Avg GPU Load:" Foreground="#FFAAAAAA" FontSize="10"/>
                                        <TextBlock Grid.Row="4" Grid.Column="1" Name="AvgGpuLoadText" Text="0%" Foreground="#FFCCCCCC" FontSize="10"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
        
        <!-- Control Buttons -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Name="StatusText" Text="Ready" 
                       VerticalAlignment="Center" Foreground="#FFCCCCCC"/>
            <Button Grid.Column="1" Name="StartButton" Content="🚀 START" 
                    Style="{StaticResource ModernButton}" Margin="8,0,0,0" Width="100"/>
            <Button Grid.Column="2" Name="StopButton" Content="⏹️ STOP" 
                    Style="{StaticResource ModernButton}" Margin="8,0,0,0" Width="100" IsEnabled="False"/>
            <Button Grid.Column="3" Name="SaveButton" Content="💾 SAVE" 
                    Style="{StaticResource ModernButton}" Margin="8,0,0,0" Width="100"/>
        </Grid>
        
        <!-- Results Section -->
        <Border Grid.Row="4" Background="#FF1E1E1E" CornerRadius="6" Padding="16" Margin="0,16,0,0">
            <StackPanel>
                <TextBlock Text="Results" Style="{StaticResource SectionHeader}"/>
                <TextBox Name="ResultsTextBox" 
                         Style="{StaticResource ModernTextBox}" 
                         Height="60" 
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Text="Results will appear here..."/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
